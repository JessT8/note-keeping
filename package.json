    "@nestjs/graphql": "^7.9.8",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/platform-express": "^7.6.11",
    "@nestjs/serve-static": "^2.1.4",
    "@nestjs/typeorm": "^7.1.5",
    "apollo-server-express": "^2.19.2",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "graphql": "^15.5.0",
    "graphql-tools": "^6.2.6",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^3.6.4",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
